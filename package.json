{
    "name": "@jtalton/observable-collections",
    "version": "0.0.0",
    "description": "Collections of items that emit change events.",
    "author": {
        "name": "James Talton",
        "email": "talton@gmail.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jamestalton/observable-collections.git"
    },
    "homepage": "https://github.com/jamestalton/observable-collections#readme",
    "bugs": {
        "url": "https://github.com/jamestalton/observable-collections/issues"
    },
    "main": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "license": "ISC",
    "scripts": {
        "build": "tsc --sourceMap false",
        "test": "npm run jest && npm run eslint && npm run prettier",
        "jest": "jest",
        "eslint": "eslint src test",
        "prettier": "prettier --check src test",
        "clean": "rm -rf coverage lib *.tsbuildinfo"
    },
    "files": [
        "lib"
    ],
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/node": "^16.11.6",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^5.2.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-jest": "^25.2.2",
        "eslint-plugin-prettier": "^4.0.0",
        "jest": "^27.3.1",
        "prettier": "^2.4.1",
        "ts-jest": "^27.0.7",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module",
            "project": [
                "./tsconfig.json",
                "./test/tsconfig.json"
            ]
        },
        "extends": [
            "eslint:recommended",
            "plugin:jest/recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking",
            "plugin:prettier/recommended"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "collectCoverage": true,
        "coverageReporters": [
            "text",
            "text-summary",
            "html",
            "lcov"
        ],
        "collectCoverageFrom": [
            "src/**/*.ts",
            "src/**/*.tsx",
            "!**/node_modules/**"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "jsx",
            "node",
            "ts",
            "tsx"
        ]
    }
}
